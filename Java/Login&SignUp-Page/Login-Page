    private void jbtnLoginActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        String username = jtxtUserName.getText();
        String password = new String(jPasswordField.getPassword());
       
       if (checkCredentials(username, password)) {
           JOptionPane.showMessageDialog(Login.this, "Congratulations " +username+ ", You have made it to the second year. Wishing you all the best");
       }else {
                    JOptionPane.showMessageDialog(Login.this, "Invalid credentials. Please try again.");
                }
    }                                         
    //The text file being named
    private static final String CREDENTIALS_FILE = "user_credentials.txt";
//The text file is being read here and matching the register form with the login form infomation about the user
 private boolean checkCredentials(String username, String password) {
        try {
            BufferedReader reader = new BufferedReader(new FileReader(CREDENTIALS_FILE));
            String line;
            while ((line = reader.readLine()) != null) {
                String[] credentials = line.split(",");
                if (credentials.length == 2) {
                     String storedUsername = credentials[0];
                    String storedPassword = credentials[1];
                    //The two fields that must be read in the text file
                    if (username.equals(storedUsername) && password.equals(storedPassword)) {
                        reader.close();
                        return true;
                    }
                }
            }
            reader.close();
        } catch (IOException e) {
            e.printStackTrace();
        }
        return false;
    }
    private void jbtnSignUpActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        SignUp SignUpFrame = new SignUp();//Switching between the login and signUp form
        SignUpFrame.setVisible(true);
        SignUpFrame.pack();
        setDefaultCloseOperation(EXIT_ON_CLOSE); //exxits the program when exiting the form
        SignUpFrame.setLocationRelativeTo(null); //position of the form
        this.dispose();
    }                                          

