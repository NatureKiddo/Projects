    private void jbtnSignupActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        String fullName = jtxtFName.getText(); //the full name of the text file
        String email = jtxtEmailSU.getText(); //the email of the text file
        String username = jtxtUsername.getText(); //the username of the text file
        char[] passwordChars = jPasswordSignUp.getPassword(); //the password of the text file
        String password = new String(passwordChars); //making the password into a string
        
        //The Full Name
        if (fullName.isEmpty()) {
            JOptionPane.showMessageDialog(this, "Please enter your full name.", "Error", JOptionPane.ERROR_MESSAGE);
        }else {
            saveFullName(fullName);
             clearFields();
        }
        //The Email
         if (email.trim().isEmpty()) {
            JOptionPane.showMessageDialog(this, "Please enter your Email.", "Error", JOptionPane.ERROR_MESSAGE);
        } else {
            saveEmail(email);
             clearFields();
        }
         //The UserName
         if (username.trim().isEmpty()) {
            JOptionPane.showMessageDialog(this, "Please enter your UserName.", "Error", JOptionPane.ERROR_MESSAGE);
        }else {
            if (correctUserName(username)) {
                saveUsername(username);
                 clearFields();
                JOptionPane.showMessageDialog(this, "Username Accepted, Proceed", "Success", JOptionPane.INFORMATION_MESSAGE);
            } else {
                JOptionPane.showMessageDialog(this, "Username does not meet the criteria, please ensure that your username contains a pound sign (#) and is no more than 8 characters in length.", "Error", JOptionPane.ERROR_MESSAGE);
            }
         }
         //The Password
         if (password.isEmpty()) {
            JOptionPane.showMessageDialog(this, "Please enter your Password.", "Error", JOptionPane.ERROR_MESSAGE);
        } else {
            if (meetPasswordComplexity(password)) {
                savePassword(password);
                 clearFields();
                JOptionPane.showMessageDialog(this, "Password Accepted", "Success", JOptionPane.INFORMATION_MESSAGE);
            } else {
                JOptionPane.showMessageDialog(this, "Password not Accepted, please check that you have met all the criteria required.", "Error", JOptionPane.ERROR_MESSAGE);
            }
        }
    }                                          
//To save the Password in the text file
 private void savePassword(String password) {
        try (BufferedWriter writer = new BufferedWriter(new FileWriter("user_credentials.txt", true))) {
            writer.write("Password: " + password);
            writer.newLine();
        } catch (IOException e) {
            e.printStackTrace();
            JOptionPane.showMessageDialog(this, "Failed to save credentials.", "Error", JOptionPane.ERROR_MESSAGE);
        }
    }
 //What may be used when creating you password
 private boolean meetPasswordComplexity(String password) {
        return password.length() >= 8 &&
                password.matches(".*[A-Z].*") &&
                password.matches(".*\\d.*") &&
                password.matches(".*[!@#$%^&*()].*");
    }
 
  //Saving your full name in the text file
  private void saveFullName(String fullName) {
        try (BufferedWriter writer = new BufferedWriter(new FileWriter("user_credentials.txt", true))) {
            writer.write("Full Name: " + fullName + "," );
            writer.newLine();
        } catch (IOException e) {
            e.printStackTrace();
            JOptionPane.showMessageDialog(this, "Failed to save full name.", "Error", JOptionPane.ERROR_MESSAGE);
        }
    }
  //Saving your email address in the text file
    private void saveEmail(String email) {
        try (BufferedWriter writer = new BufferedWriter(new FileWriter("user_credentials.txt", true))) {
            writer.write("Email: " + email + ",");
            writer.newLine();
        } catch (IOException e) {
            e.printStackTrace();
            JOptionPane.showMessageDialog(this, "Failed to save full name.", "Error", JOptionPane.ERROR_MESSAGE);
        }
    }  
       //Saving the username into the text file    
       private void saveUsername(String username) {
        try (BufferedWriter writer = new BufferedWriter(new FileWriter("user_credentials.txt", true))) {
            writer.write("UserName: " + username + ",");
            writer.newLine();
        } catch (IOException e) {
            e.printStackTrace();
            JOptionPane.showMessageDialog(this, "Failed to save credentials.", "Error", JOptionPane.ERROR_MESSAGE);
        }
    }
       //What the username must have when creating one
        private boolean correctUserName(String username) {
        return username.contains("#") && username.length() <= 8;
    }
       //Clearing the text on the form
        private void clearFields() {
        jtxtFName.setText("");
        jtxtEmailSU.setText("");
        jtxtUsername.setText("");
        jPasswordSignUp.setText("");
    }
    

