    private void jbtnEqualsActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        // Get the number entered in the text field (jtxtResult) and convert it to a double.
    NumEnter2 = Double.parseDouble(jtxtResult.getText());

    // Check the value of the variable 'Op' to determine which operation to perform.
    if (Op == "+") {
        // If 'Op' is "+", perform addition and store the result in 'Results'.
        Results = NumEnter1 + NumEnter2;
    } else if (Op == "-") {
        // If 'Op' is "-", perform subtraction and store the result in 'Results'.
        Results = NumEnter1 - NumEnter2;
    } else if (Op == "*") {
        // If 'Op' is "*", perform multiplication and store the result in 'Results'.
        Results = NumEnter1 * NumEnter2;
    } else if (Op == "/") {
        // If 'Op' is "/", perform division and store the result in 'Results'.
        Results = NumEnter1 / NumEnter2;
    }

    // Update the text field (jtxtResult) with the calculated result converted to a string.
    jtxtResult.setText(String.valueOf(Results));
        
    }                                          

