    private void jbtnBSActionPerformed(java.awt.event.ActionEvent evt) {                                       
       String backSp = null;  // Initialize the 'backSp' variable as null.

// Check if the text in the 'jtxtResult' text field has a length greater than 0.
if (jtxtResult.getText().length() > 0) {
    // Create a StringBuilder to manipulate the text.
    StringBuilder sb = new StringBuilder(jtxtResult.getText());
    
    // Delete the last character in the StringBuilder.
    sb.deleteCharAt(jtxtResult.getText().length() - 1);
    
    // Convert the modified StringBuilder back to a String.
    backSp = sb.toString();
    
    // Set the text of the 'jtxtResult' text field to the modified String.
    jtxtResult.setText(backSp);

        }
    }                                      

    private void jbtnDotActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // Check if the text in the 'jtxtResult' text field does not contain a period (dot).
        if (!jtxtResult.getText().contains(".")) {
            // If there is no period in the text field, proceed.

            // Append the text of the 'jbtnDot' button (likely a dot or decimal point) to the existing text in 'jtxtResult'.
            jtxtResult.setText(jtxtResult.getText() + jbtnDot.getText());

        }
    }                                       

