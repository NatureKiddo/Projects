    private void jbtnDivideActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // Parse the text from the 'jtxtResult' text field and convert it to a double.
         NumEnter1 = Double.parseDouble(jtxtResult.getText());

          // Clear the text field by setting its text to an empty string.
          jtxtResult.setText("");

          // Set the 'Op' variable to "/" to indicate that the division operation is selected.
          Op = "/";

    }                                          

