    //==========================================FUNCTION=====================================================
    public void upDateDB()
    {
        try{
            Class.forName("com.mysql.jdbc.Driver");
            sqlConn = DriverManager.getConnection(dataConn,username,password);
            pst = sqlConn.prepareStatement("select departmentheads from universitydb");
            
            rs = pst.executeQuery();
            ResultSetMetaData stData = rs.getMetaData();
            
            q = stData.getColumnCount();
            
            DefaultTableModel RecordTable = (DefaultTableModel)jTable1.getModel();
                   RecordTable.setRowCount(0);
                   
            while(rs.next()){
                Vector columnData = new Vector();
                
                for (i = 1;i <= q; i++)
                {
                    columnData.add(rs.getString("id"));
                    columnData.add(rs.getString("DepartmentHeadID"));
                    columnData.add(rs.getString("Name"));
                    columnData.add(rs.getString("Surname"));
                    columnData.add(rs.getString("DepartmentName"));
                    columnData.add(rs.getString("Email"));
                    columnData.add(rs.getString("Username"));
                    columnData.add(rs.getString("Password"));
                }
                RecordTable.addRow(columnData);
            }
        }
        catch (Exception ex){
            JOptionPane.showMessageDialog(null, ex);
        }
    }
    
    
