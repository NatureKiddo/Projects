    private void btnLoginActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        var user = UserName.getText();
        var pass = jPassword.getText();
        var role = RoleBox.getSelectedItem().toString();
        
         if (validateLogin(user, pass, role)) {
        // Successful login
        switch (role) {
            case "Student":
                StudentAfterLogin();
                break;
            case "Teacher":
                FacultyMenu();
                break;
            case "Department Head":
                Depart_Menu();
                break;
            case "Administrator":
                AdministratorMENU();
                break;
            default:
                JOptionPane.showMessageDialog(this, "Invalid role!");
        }
    } else {
        // Invalid login
        JOptionPane.showMessageDialog(this, "Invalid username or password.");
    }
    }                                        

